<div class="container">
<hr />
<h4>[<%= @topic.description %>] <%= @topic.title %></h4>
<p> Posted by <%= link_to @user.username , controller: 'users', action: 'show' ,id: @user %></p>
<% @post.each do |post| %>
  <strong>
    <a href= <%= user_path('show',id: post.user_id) %>>
      <%= post.user.username unless post.user.blank?%>
    </a>
  </strong>
  -
  <small>Posted <%= time_ago_in_words(post.created_at) %> ago</small>
  <br/> <br/>
  <p> <%= post.text %> </p>
<% end %>

  <hr/>

<% if current_user %>
  <%= form_for [@topic, Post.new] do |f| %>
    <%= f.text_area :text, placeholder: "Add a comment" %> <br/>
    <%= f.check_box :anon %>
    <small> Post anonymously </small>
    <br/>
    <%= f.submit "Post" %>
  <% end %>
<% end %>

<%= render(partial: 'posts/post', collection: @topic.posts) %>

</div>
