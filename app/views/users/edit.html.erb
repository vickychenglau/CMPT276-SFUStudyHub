<h1>Update User Information</h1>

<%= render 'form' %>

<% if @user.errors.any? %>
    <ul class="Signup_Errors">
    <% for message_error in @user.errors.full_messages %>
      <li>* <%= message_error %></li>
    <% end %>
    </ul>
<% end %>


<% if current_user.role == 'admin' %>
	<p><%= link_to 'Back', users_list_path %></p>
<% else %>
	<p><%= link_to 'Back', user_path %></p>
<% end %>