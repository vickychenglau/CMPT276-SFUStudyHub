<h1><%= @user.username %></h1>

<table>
  <tr>
    <th>Field</th>
    <th>User Information</th> 
  </tr>
  
  <tr>
    <td>Username</td>
    <td><%= @user.username %></td>
  </tr>
  <tr>
    <td>First Name</td>
    <td><%= @user.first_name %></td>
  </tr>
  <tr>
    <td>Last Name</td>
    <td><%= @user.last_name %></td>
  </tr>
  <tr>
    <td>Email</td>
    <td><%= @user.email %></td>
  </tr>
</table>

<h3>User's Topics</h3>

<table>
<% @topics.each do |topics| %>
  <tr>
    <td><%= @topics.title %></td>
  </tr>
<% end %>
</table>